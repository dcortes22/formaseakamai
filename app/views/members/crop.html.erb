<div class="container">
  <div class='row'>
    <div class='col-xs-8'>
    <%= simple_form_for(@member) do |f| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Redimensione su foto</h3>
        </div>
        <div class="panel-body">
          <%= image_tag @member.photo_url(:large), id: "cropbox" %>
          <br>
            <% %w[x y w h].each do |attribute| %>
              <%= f.input "crop_#{attribute}", as: :hidden %>
            <% end %>
        </div>
      </div>
    </div>

    <div class='col-xs-4'>

      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Vista Previa</h3>
        </div>
        <div class="panel-body">
          <div style="width:100px; height:100px; overflow:hidden">
            <%= image_tag @member.photo.url(:large), id: "preview" %>
          </div>
          <br/>
          <div class="form-actions">
            <%= f.button :submit, "Â¡Listo!" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>